            android:layout_weight="1"
            android:background="#62B0FF" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="25dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="#46B0FF" />

        <TextView
            android:id="@+id/nameInProfile"
            android:layout_width="25dp"
