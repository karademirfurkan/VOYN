            android:layout_weight="1"
            android:background="#33BEFF" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="25dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="#438AF8" />

        <TextView
            android:id="@+id/textView14"
