<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="180dp"
            android:layout_height="69dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-light"
            android:text="VOYN"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:hint="Enter your name..."
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:hint="Enter your surname..."
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:hint="Enter your mail..."
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/age"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:hint="Enter your age..."
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/department"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:hint="Enter your department..."
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:hint="Enter your password..."
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/approvePassword"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:hint="Approve your password..."
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/signUps"
            style="@style/Regular_Button_View"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:onClick="signUpButtonClicked"
            android:text="Sign Up"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="25dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#B3DEFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="25dp"
