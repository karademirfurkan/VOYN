<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myactivitiesclasses.myTransportationActivityDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transportation_activity_list_row_view"
        android:backgroundTint="#8BCFFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4042343"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jockey_one"
            android:textColor="@color/black"
            android:text="ACCEPTED PEOPLE FOR THIS ACTIVITY"
            android:textAlignment="center"
            android:textSize="23sp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imageView129348"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/img_3" />
        <LinearLayout
            android:id="@+id/bigLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical">
                    \

                    <TextView
                        android:id="@+id/textView3234"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Time"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/timeForMyTransportationActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="12.00"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Date"
                        android:textColor="#090909"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/dateForMyTransportationActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="01.01.2025"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Person Limit"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/availableSeatsForMyTransportationActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="2/4"
                        android:textColor="#000000" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Where From"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/whereFromForMyTransportationActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Istanbul"
                        android:textColor="#000000" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Where To"
                        android:textColor="#020202"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/whereToForMyTransportationActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:text="Ankara"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView12933R48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/img_3" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="incomingInvitationButtonClicked"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/jockey_one"
            android:text="WAITING INCOMING REQUESTS"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />
        <TextView
            android:id="@+id/textView63434234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="CLICK ON INVITATION TO SEE THE DETAILS OF PROFILE"
            android:fontFamily="@font/jockey_one"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/imageView13429348"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/img_3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView3"
            android:layout_width="411dp"
            android:layout_height="415dp"
            tools:layout_editor_absoluteY="154dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>