<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/biography"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="PLEASE FOLLOW THE INSTRUCTIONS"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="1. Enter your mail.\n2. Enter your password.\n3. Sign in with your new password"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/forgetPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:text="Enter your mail"
            android:background="@drawable/edittextshape"
            android:layout_marginBottom="60dp"
            android:paddingLeft="15dp"/>

        <Button
            android:id="@+id/sendEmail"
            style="@style/Regular_Button_View"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:onClick="sendMailButtonClicked"
            android:text="Send email"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="25dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#B3DEFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="25dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="#8BCFFF" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#62B0FF" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="25dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="#46B0FF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#33BEFF" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="25dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="#438AF8" />

        <TextView
            android:id="@+id/textView14"
