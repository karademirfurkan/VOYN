<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="25dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#B3DEFF" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="25dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="#8BCFFF" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#62B0FF" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="25dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="#46B0FF" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#33BEFF" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="25dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:background="#438AF8" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="25dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="#6486FF" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="#4094CD" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="#4979B0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="25dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="#6993BD" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="25dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="#739DE8" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="25dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="#275583" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.19999999">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="210dp"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/orderImage"
                android:layout_width="200dp"
                android:layout_height="12dp"
                tools:src="@tools:sample/backgrounds/scenic"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/button2"
                style="@style/Activities_Page_Buttons_View"
                android:layout_width="310dp"
                android:layout_height="75dp"
                android:layout_marginBottom="11dp"
                android:drawableLeft="@drawable/car_icon"
                android:fontFamily="@font/jockey_one"
                android:text="TRANSPORTATION"
                android:textColor="#000000"
                android:textSize="23sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Activities_Page_Buttons_View"
                android:layout_width="310dp"
                android:layout_height="75dp"
                android:layout_marginBottom="11dp"
                android:drawableLeft="@drawable/home_icon"
                android:fontFamily="@font/jockey_one"
                android:text="HOME AND DORM"
                android:textColor="#000000"
                android:textSize="23sp" />


            <Button
                android:id="@+id/sportsButton"
                style="@style/Activities_Page_Buttons_View"
                android:layout_width="310dp"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/ball_icon"
                android:fontFamily="@font/jockey_one"
                android:text="SPORTS"
                android:textColor="#000000"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    style="@style/Activities_Page_Buttons_View2"
                    android:layout_width="138dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/jockey_one"
                    android:text="MY ACTIVITIES"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button9"
                    style="@style/Activities_Page_Buttons_View2"
                    android:layout_width="138dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/jockey_one"
                    android:text="INCOMING INVITATIONS"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>