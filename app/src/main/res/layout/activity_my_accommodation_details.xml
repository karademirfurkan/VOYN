<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myactivitiesclasses.myTransportationActivityDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transportation_activity_list_row_view"
        android:backgroundTint="#8BCFFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jockey_one"
            android:text="ACCEPTED PEOPLE FOR THIS ACTIVITY"
            android:textAlignment="center"
            android:textSize="23sp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imageView123498"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/img_3" />

        <LinearLayout
            android:id="@+id/accommodationLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/jockey_one"
                    android:gravity="center_horizontal"
                    android:text="Date"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/AccomodationDateForMyActivities"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/jockey_one"
                    android:gravity="center_horizontal"
                    android:text="01.01.2024"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:text="Gender:" />

                    <TextView
                        android:id="@+id/genderForMyActivities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/jockey_one"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:text="Male" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/jockey_one"
                    android:gravity="center_horizontal"
                    android:text="Place"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/placeForMyActivities"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/jockey_one"
                    android:gravity="center_horizontal"
                    android:text="Bilkent"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/jockey_one"
                    android:gravity="center_horizontal"
                    android:text="Person Limit"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/personLimitForMyActivities"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/jockey_one"
                    android:gravity="center_horizontal"
                    android:text="1/5"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/imageView123493"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/img_3" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="incomingInvitationButtonClicked"
            android:text="WAITING INCOMING REQUESTS"
            android:fontFamily="@font/jockey_one"
            android:gravity="center"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp"
            />

        <TextView
            android:id="@+id/textView63"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLICK ON INVITATION TO SEE THE DETAILS OF PROFILE"
            android:fontFamily="@font/jockey_one"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/imageView12333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/img_3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView3"
            android:layout_width="411dp"
            android:layout_height="415dp"
            tools:layout_editor_absoluteY="154dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>